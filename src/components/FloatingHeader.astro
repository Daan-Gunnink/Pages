---
import { useStoryblokApi } from '@storyblok/astro'
const storyblokApi = useStoryblokApi()
const { data } = await storyblokApi.get('cdn/stories/config', {
  version: 'draft',
  resolve_links: 'url',
})

const headerMenu = data?.story?.content?.header_menu
const headerTitle = data?.story?.content.header_title
---

<header class="w-full h-[8rem] absolute bg-gradient-to-b from-gray-900 to-transparent"> 
  <div class="container h-full mx-auto flex items-center justify-center">
    <a href="/">
      <h1 class="text-[#fff] text-3xl tracking-widest font-[spinnaker] uppercase">{headerTitle}</h1>
    </a>
    <nav class="ml-20">
      <ul class="flex space-x-8 text-xl">
        {
          headerMenu.map((menu) => (
            <li>
              <a href={`/${menu.link.cached_url}`} class="hover:text-[#000] text-[#fff] uppercase font-[questrial]">
                {menu.link.story.name}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</header>