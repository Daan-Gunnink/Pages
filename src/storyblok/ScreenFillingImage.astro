---
import { Image } from "astro:assets";
const { blok } = Astro.props

let imageUrl = blok.image && blok.image.filename

if(imageUrl){
    if(blok.image.focus){
        imageUrl = imageUrl + `/m/1920x1080/filters:focal(${blok.image.focus})`
    }
}

---
<Image class="w-screen h-screen object-cover" src={imageUrl} inferSize alt="Screen Filling Image" />

