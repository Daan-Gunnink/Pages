---
import { Image } from "astro:assets";
const { blok } = Astro.props

let imageUrl = blok.image && blok.image.filename

if(imageUrl && !blok.image.is_external_url){
    if(blok.image.focus){
        imageUrl = imageUrl + `/m/1920x1080/filters:focal(${blok.image.focus})`
    }
}

---
<img class="w-screen h-full object-cover" src={imageUrl} alt="Screen Filling Image" />

